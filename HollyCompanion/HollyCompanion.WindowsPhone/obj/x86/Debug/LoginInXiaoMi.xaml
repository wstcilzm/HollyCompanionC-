<Page
    x:Class="HollyCompanion.LoginInXiaoMi"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HollyCompanion"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:control="using:HollyCompanion.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource PhoneForegroundBrush}">

    <Grid Margin="30,60,30,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>          
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Login to Xiaomi" FontWeight="Bold" FontFamily="Arial" FontSize="30"  Foreground="#FF3C3636"  Grid.Row="0"/>
        <TextBox Grid.ColumnSpan="2" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20" Width="320" Height="40" BorderBrush="Black" BorderThickness="1" />
        <PasswordBox Grid.ColumnSpan="2" FontFamily="Global User Interface" HorizontalAlignment="Left"  VerticalAlignment="Top"  Grid.Row="4" FontSize="20" Width="320" Height="40" BorderBrush="Black" BorderThickness="1" />
        <control:NextButton x:ConnectionId='1'  Grid.Column="0" Grid.Row="6"  Height="38" Width="110" BtnHeight="38" BtnWidth="110" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center"  Text="CANCEL" FontFamily="Global User Interface"                          Background="#FF595959" Foreground="White" >
        </control:NextButton>
        <control:NextButton x:ConnectionId='2'  Grid.Column="1" Grid.Row="6"  Height="38" Width="110" BtnHeight="38" BtnWidth="110" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center"  Text="NEXT" FontFamily="Global User Interface"                        Background="#FF595959" Foreground="White" >
        </control:NextButton>
    </Grid>
</Page>

