<Page
    x:Class="HollyCompanion.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HollyCompanion"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:control="using:HollyCompanion.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource PhoneForegroundBrush}">

    <Grid Margin="30,60,30,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock  TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Login in Cortana for the home" FontWeight="Bold" FontFamily="Arial" FontSize="30"  Foreground="#FF3C3636" Grid.Column="0" Grid.Row="0"/>
        <control:NextButton x:ConnectionId='1' x:Name="btnNext" Grid.Row="2" Height="38" Width="200" BtnHeight="38" BtnWidth="200" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White"  FontFamily="Global User Interface"                          Background="#FF595959" Text="Create account">
        </control:NextButton>
        <TextBlock Grid.Column="0" Grid.Row="6"  HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="15"><Hyperlink Foreground="Blue">Use an existing Microsoft account</Hyperlink></TextBlock>
        <control:NextButton x:ConnectionId='2'  Grid.Column="0" Grid.Row="8"  Height="38" Width="110" BtnHeight="38" BtnWidth="110" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Right"  Text="Logout" FontFamily="Global User Interface"                          Background="#FF595959" Foreground="White" >
        </control:NextButton>
    </Grid>
</Page>

