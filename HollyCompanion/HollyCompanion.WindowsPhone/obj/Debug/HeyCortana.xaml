<Page
    x:Class="HollyCompanion.HeyCortana"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HollyCompanion"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:control="using:HollyCompanion.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource PhoneForegroundBrush}">

    <Grid Margin="30,60,30,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>           
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock  TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Try 'Hey Cortana!'" FontWeight="Bold" FontFamily="Arial" FontSize="30"  Foreground="#FF3C3636"  Grid.Row="0"/>
        <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Top" Text="The way you get my attention is by saying 'Hey Cortana'.Try it now by saying 'Hey Cortana,what's the weather?" Padding="0,20,0,0" UseLayoutRounding="False"   Grid.Row="2" Foreground="#FF3C3636" FontSize="15" />
        <control:NextButton x:ConnectionId='1' x:Name="btnNext" Grid.Row="4" Height="38" Width="110" BtnHeight="38" BtnWidth="110" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="White"  FontFamily="Global User Interface"                          Background="#FF595959" Text="NEXT">
        </control:NextButton>
    </Grid>
</Page>

