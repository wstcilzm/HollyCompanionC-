<Page
    x:Class="HollyCompanion.ChooseWifi"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HollyCompanion"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:control="using:HollyCompanion.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource PhoneForegroundBrush}">

    <Grid Margin="30,60,30,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock  TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Choose a Wi-Fi network for me to connect to" FontWeight="Bold" FontFamily="Arial" FontSize="30"  Foreground="#FF3C3636" Grid.Column="0" Grid.Row="0"/>
        <Image Grid.Row="2" Source="Assets/Wifi.png" Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Top" Text="Enter the security key" Padding="0,20,0,0" UseLayoutRounding="False"   Grid.Row="4" Foreground="#FF3C3636" FontSize="15" />
        <TextBox FontFamily="Global User Interface" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="0" Grid.Row="6" FontSize="15" Width="320" Height="40" BorderBrush="Black" BorderThickness="1"/>
        <control:NextButton x:ConnectionId='1' x:Name="btnNext" Grid.Row="8" Height="38" Width="110" BtnHeight="38" BtnWidth="110" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="White"  FontFamily="Global User Interface"                          Background="#FF595959" Text="NEXT">
        </control:NextButton>
    </Grid>
</Page>

